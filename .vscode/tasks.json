{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always", // Enable colored diagnostics
                "-g", // Enable debugging information
                "${file}", // Compile the active file
                "-o", "${fileDirname}\\${fileBasenameNoExtension}.exe", // Output executable
                "-pthread", // Link threading library
                "-lws2_32", // Link Winsock library
                "-I", "${workspaceFolder}/include", // Add include path for nlohmann/json
                "-std=c++17" // Enable C++17 standard
            ],
            "options": {
                "cwd": "${fileDirname}" // Set the working directory to the file's directory
            },
            "problemMatcher": [
                "$gcc" // Use GCC problem matcher for error reporting
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Set this task as the default build task
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
